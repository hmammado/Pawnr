<h1 class = "header"> My Name is <%= @dog.name %></h1>

<div class="show-top">

  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <% @dog.photos.each do |photo| %>
        <%if photo == @dog.photos.first %>
            <div class="carousel-item active">
              <%= cl_image_tag photo.key, crop: :fill, class:"d-block w-100"%>
            </div>
        <% else %>
            <div class="carousel-item ">
            <%= cl_image_tag photo.key, crop: :fill, class:"d-block w-100"%>
            </div>
          <% end %>
        <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="book">
          <h1>Create your doggy experience</h1>

            <%= simple_form_for [ @dog, @booking ] do |f| %>
              <%= f.input :start_date, as: :date, order: [:day, :month, :year] %>
              <%= f.input :end_date, as: :date, order: [:day, :month, :year] %>
              <div class="price">
                <%= f.submit "Submit", class: "btn-main" %>
                <h5 class = "euro"><%= "#{@dog.price}â‚¬ / day" %></h5>
              </div>
          <% end %>
  </div>

</div>


  <div class="about-me">
    <div class="description-details">
      <h2> About Me </h2>
      <p class = "dog-description"> <%= "#{@dog.name} is a beautiful and very calm dog.
          She loves playing with other dogs. She rarely barks and her favorite food is bacon"%></p>
   </div>

     <div class= "right">
        <div class = "list-details">
          <ul class = 'details'>
            <li><strong>Breed:</strong> <%= @dog.breed%> </li>
            <li><strong>Size:</strong> <%= @dog.size%> </li>
            <li><strong>Gender:</strong> Female </li>
            <li><strong>Age:</strong> <%= @dog.age%></li>
          </ul>
        </div>
      </div>
  </div>
