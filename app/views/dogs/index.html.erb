<div>
  <h2> Find your next Pawnr</h2>
  <%= link_to 'Add a pawnr', new_dog_path, class: "btn-main-add-pawnr"%>
</div>

<div class="main-container">
  <div class ="cards-container" >
    <div class ="cards">
      <% @dogs.each do |dog| %>
        <div class="card">
          <% if dog.photo.attached?  %>
            <img class="card-img-top" src="<%= cl_image_path dog.photo.key %>" alt="Card image cap">
          <% end %>
          <div class= "card-body">
            <div class ='main-info'>
              <h4> <%= dog.name %></h4>
              Age: <%= dog.age %>
            </div>
            <div class = 'extra-info'>
              <strong class='price' ><%= dog.price %>€  /week</strong>
              <%= link_to 'About Me', dog_path(dog), class:"btn-main-index"  %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
   <div id="map"
     style="width: 80%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
     </div>
</div>
