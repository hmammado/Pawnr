<div class="form-container">
  <h1>Share the puppy love</h1>
  <%# <div class="grid"> %>
    <%= simple_form_for [ @user, @dog ], html: {class: "grid"} do |f| %>
      <div class="row">
        <div class="col-6">
          <%= f.input :name %>
        </div>
        <div class="col-6">
          <%= f.input :breed %>
        </div>
      </div>
      <%= f.input :age %>
      <%= f.input :size %>
      <%= f.input :description, as: :text %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  <%# </div> %>
</div>
